<div class="col-8 offset-2">
    <h3>Editar  Libro</h3>

    <form method="post" action="/libros/update/<%= @book.id %>">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="hidden"  name="book[id]" value="<%= @book.id %>">
       <div class="form-group">
            <label>Nombre</label>
            <br>
            <input type="text" placeholder="Ingrese nombre" name="book[title]" value="<%= @book.title %>" class="form-control">
        </div>
        <div class="form-group">
            <label>Descripti√≥n</label>
            <br>
            <textarea name="book[description]" class="form-control"><%= @book.description %></textarea>
        </div>
        <div class="form-group">
            <select name="book[author_id]" class="form-control">
                <% for  author in @authors %>
                    <option text="<%= author.name %>" value="<%= author.id %>">
                        <%= author.name %>
                    </option>
                <% end %>
            </select>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
    </form>
</div>
