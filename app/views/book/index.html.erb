
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>#</th>
            <th>#</th>
        </tr>
    </thead>
    <% for book in @books %>
        <tr>
            <td><%= book.title  %></td>
            <td><%= book.description  %></td>
            <td>
                <a href="/libros/mostrar/<%= book.id %>">Ver</a>
            </td>
            <td><a href="/libros/editar/<%= book.id %>">Editar</a></td>
        </tr>
    <% end %>
</table>
