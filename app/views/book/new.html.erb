<div class="col-8 offset-2">
    <h3>Crear Libro</h3>
    <form method="post" action="<%= libros_crear_path %>">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
            <label>Nombre</label>
            <input type="text" placeholder="Ingrese nombre" name="book[title]" class="form-control">
        </div>
        <div class="form-group">
            <label>Descripci√≥n</label>
            <textarea name="book[description]" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Autor</label>
            <select name="book[author_id]" class="form-control">
                <% for author in @authors %>
                    <option value="<%= author.id  %>" text="">
                        <%= author.name %>
                    </option>
                <% end %>
            </select>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
    </form>
</div>